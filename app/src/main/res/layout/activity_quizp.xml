<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Quizp_Activity">

  <TextView
      android:id="@+id/tv_soal"
      android:layout_width="398dp"
      android:layout_height="33dp"
      android:gravity="center"
      android:text="which flag is this?"
      android:textSize="24dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.041" />

  <ImageView
      android:id="@+id/iv_image"
      android:layout_width="245dp"
      android:layout_height="136dp"
      android:scaleType="fitCenter"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.136"
      tools:srcCompat="@drawable/turkmenistan" />

  <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/ll_progress_dtls"
      android:layout_width="407dp"
      android:layout_height="20dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.159"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/iv_image"
      app:layout_constraintVertical_bias="0.049">

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="337dp"
        android:layout_height="16dp"
        android:layout_weight="1"
        android:background="#00FFFFFF"
        android:indeterminate="false"
        android:max="10"
        android:progress="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.035"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.666" />

    <TextView
        android:id="@+id/tv_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0/4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/progressBar"
        app:layout_constraintTop_toTopOf="parent" />
  </androidx.constraintlayout.widget.ConstraintLayout>

  <TextView
      android:id="@+id/tv_optionone"
      android:layout_width="218dp"
      android:layout_height="49dp"
      android:gravity="center"
      android:text="Argentina"
      android:textColor="#FFFFFF"
      android:textSize="20dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.491"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/ll_progress_dtls"
      app:layout_constraintVertical_bias="0.039" />

  <TextView
      android:id="@+id/tv_optiontwo"
      android:layout_width="218dp"
      android:layout_height="49dp"
      android:gravity="center"
      android:text="Argentina"
      android:textColor="#FFFFFF"
      android:textSize="20dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.497"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/tv_optionone"
      app:layout_constraintVertical_bias="0.085" />

  <TextView
      android:id="@+id/tv_optionthree"
      android:layout_width="218dp"
      android:layout_height="49dp"
      android:gravity="center"
      android:text="Argentina"
      android:textColor="#FFFFFF"
      android:textSize="20dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.497"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/tv_optiontwo"
      app:layout_constraintVertical_bias="0.087" />

  <TextView
      android:id="@+id/tv_optionfour"
      android:layout_width="218dp"
      android:layout_height="49dp"
      android:gravity="center"
      android:text="Argentina"
      android:textColor="#FFFFFF"
      android:textSize="20dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.491"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/tv_optionthree"
      app:layout_constraintVertical_bias="0.153" />

  <Button
      android:id="@+id/btn_next"
      android:layout_width="211dp"
      android:layout_height="49dp"
      android:text="Next"
      android:textColor="#FFFFFF"
      app:backgroundTint="#2196F3"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/tv_optionfour" />

</androidx.constraintlayout.widget.ConstraintLayout>